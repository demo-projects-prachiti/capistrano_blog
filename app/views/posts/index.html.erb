<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%# cache post do %> 
        <%= render post %>
      <%# end %> 
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
